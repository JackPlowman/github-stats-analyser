{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "repository_owner": {
      "type": "string"
    },
    "repositories": {
      "type": "array",
      "additionalProperties": false,
      "items": [
        {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "total_files": {
              "type": "integer"
            },
            "total_commits": {
              "type": "integer"
            },
            "commits": {
              "type": "object"
            },
            "languages": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "language_count": {
                  "type": "integer"
                },
                "language_sloc": {
                  "type": "object"
                }
              },
              "required": ["language_count", "language_sloc"]
            }
          },
          "required": [
            "repository",
            "total_files",
            "total_commits",
            "commits",
            "languages"
          ]
        }
      ]
    }
  }
}
